<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="book.controller.PersonalController"
            prefHeight="400.0" prefWidth="600.0" styleClass="box">
    <ImageView fx:id="adminImg" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
               fitWidth="120" fitHeight="120">
    </ImageView>
    <VBox AnchorPane.topAnchor="20" AnchorPane.leftAnchor="180" spacing="20">
        <Label fx:id="adminName" styleClass="font-title" text="姓名"/>
        <TextField fx:id="adminPassword" editable="false" text="密码" styleClass="gray-theme"/>
        <HBox spacing="30">
            <Button text="修改密码" styleClass="green-theme" onAction="#edit"/>
            <Button text="保存" styleClass="blue-theme" onAction="#save"/>
        </HBox>
    </VBox>
</AnchorPane>
